<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/valor1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nombre: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valor2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/valor1TextView"
        android:layout_marginTop="15dp"
        android:text="apellido: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valor2TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/valor1TextView"
        android:layout_marginTop="50dp"
        android:text="cedula: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valor2TextView2"
        android:layout_width="378dp"
        android:layout_height="54dp"
        android:layout_below="@id/valor1TextView"
        android:layout_marginTop="87dp"
        android:text="fecha de nacimiento: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="382dp"
        android:layout_height="79dp"
        android:layout_below="@id/valor2TextView"
        android:layout_marginTop="91dp"
        android:text="valor: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/volverButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultadoTextView"
        android:layout_marginTop="13dp"
        android:backgroundTint="#49CFBB"
        android:onClick="volver1"
        android:text="Volver" />

</RelativeLayout>